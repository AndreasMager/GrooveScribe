<?xml version='1.0' encoding='utf-8'?>
<widget id="com.montulli.GrooveScribe" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GrooveScribe</name>
    <description>
        GrooveScribe is a tool for drummers to create, hear, practice and share grooves.
    </description>
    <author email="grooveScribe@Montulli.org" href="http://mikeslessons.com/gscribe">
        Mike Johnston & Lou Montulli
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="Orientation" value="landscape" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="www/images/GScribe_Logo_vertical.png"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="320" height="480"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="640" height="960"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="768" height="1024"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="1536" height="2048"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="1024" height="768"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="2048" height="1536"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="640" height="1136"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="750" height="1334"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="1242" height="2208"/>
        <splash src="www/images/GScribe_Logo_vertical.png" width="2208" height="1242"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
